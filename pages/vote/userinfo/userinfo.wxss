/* pages/vote/userinfo/userinfo.wxss */
.head{height:100rpx;background-color:#4cb0f4;width:100%;margin-bottom:-70rpx;}
.info{padding:0 20rpx;display:flex;position:relative;}
.info .left{width:290rpx;height:290rpx;border-radius:10rpx;position:relative;}
.info .left image{width:290rpx;height:290rpx;border-radius:10rpx;}
.info .left .no{position:absolute;bottom:-2rpx;left:-2rpx;background-color:#4eaff3;border-radius:0 50rpx 50rpx 0;font-size:28rpx;
padding:12rpx 25rpx;color:#fff;-moz-box-shadow:0px 0px 5px #52B8FF; -webkit-box-shadow:0px 0px 5px #52B8FF; box-shadow:0px 0px 5px #52B8FF;}
.info .right{margin-left:25rpx;margin-top:80rpx;}
.info .right .home{background-image:url(http://xtepactive.image.alimmdn.com/vote/v140_icon_home.png);background-position:top;background-repeat:no-repeat;background-size:100%;width:90rpx;height:55rpx;top:0rpx;right:20rpx;position:absolute;}
.info .right .content{display:flex;align-items:center;}
.info .right .uname{margin-top:15rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;width:400rpx;}
.info .right .uname text{background-color:#f7f7f7;padding:5rpx 25rpx;border-radius:50rpx;font-size:28rpx;color:#ababab;}
.info .right .content .sex{background-position:center;background-repeat:no-repeat;background-size:100%;width:32rpx;height:32rpx;margin-right:10rpx;}
.info .right .content .name{font-size:38rpx;font-weight:600;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;width:360rpx;}
.info .right .content .sex.female{background-image:url(http://xtepactive.image.alimmdn.com/vote/v140_icon_famale.png);}
.info .right .content .sex.male{background-image:url(http://xtepactive.image.alimmdn.com/vote/v140_icon_man.png);}
.info .right .intro{font-size:30rpx;color:#6a6a6a;margin-top:29rpx;line-height:45rpx;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;overflow:hidden;}
.count{display:flex;justify-content:space-between;padding:50rpx 20rpx;}
.count .one.l{text-align:left;}
.count .one.c{text-align:center;}
.count .one.r{text-align:right;}
.count .one .num{font-size:40rpx;font-weight:600;}
.count .one .content{font-size:25rpx;color:#6a6a6a;}
.btn{display:flex;justify-content:center;}
.btn .one{font-size:30rpx;border-radius:100rpx;width:340rpx;text-align:center;height:90rpx;line-height:90rpx;}
.btn .one.l{border:1px solid #4fb0f4;color:#4fb0f4;margin-right:30rpx;}
.btn .one.r{background-color:#4fb0f4;color:#fff;}
.btn .one.r.off{background-color:#c1c1c1;}
.act-intro{color:#4fb0f4;text-align:center;margin:30rpx 0 0 0;border-bottom:1px solid #f1f1f1;}
.act-intro .link{margin-bottom:30rpx;display:flex;justify-content:center;align-items:center;}
.act-intro .link .icon-more{background-image:url(http://xtepactive.image.alimmdn.com/vote/v140_icon_more.png);background-position:center;background-repeat:no-repeat;background-size:100%;width:20rpx;height:20rpx;}
.show{padding:30rpx 20rpx 0 20rpx;}
.show .title{color:#303030;font-weight:600;}
.show image{display:block;width:100%;margin:20rpx 0;}
button{background-color:#fff;margin:0;padding:0;}

/*mask*/  
.drawer_screen{width:100%;height:100%;position:fixed;top:0;left:0;z-index:1000;background:#000;opacity:0.2;overflow:hidden;}  
/*content*/  
.drawer_attr_box{width:100%;overflow:hidden;position:fixed;bottom:0;left:0;z-index:1001;background:#fff;}  
.drawer_content{overflow-y:hidden;}  
.drawer_title{padding:30rpx;font:35rpx "microsoft yahei";text-align:center;}  
.line{border-bottom:5px solid #f8f8f8;}  

.userinfo-btn-fixed{
  background-color: #4fb0f4;
  color: #fff;
  border-radius:50rpx 
}
.userinfo-fixed{
  position: fixed;
  bottom: 0;
  width: 670rpx;
  padding: 30rpx 40rpx 30rpx 40rpx;
  background-color: #fff;
  border-top: 1px solid #e8e8e8
}
.userinfo-swiper image, .userinfo-swiper swiper{
  width: 100%;
  height: 127rpx;
  border-radius: 16rpx;
}
.userinfo-swiper{
  margin: 100rpx 20rpx 0 20rpx;
  border-radius: 16rpx;
}
.mb200{
  margin-bottom: 200rpx;
}