.box .text text{width:130rpx;padding:20rpx 20rpx;padding-right:0}
.box .text textarea{height:200rpx;width:570rpx;padding-top:10rpx;}
.btn{background-color:#4fb0f4;color:#fff;text-align:center;margin:0 30rpx;height:100rpx;border-radius:100rpx;line-height:100rpx;margin-top:100rpx;font-size:35rpx;font-weight:600}
