page{height:100%;background-color:#f1f1f1}
.box{background-color:#fff;margin-top:10rpx;}
.box.dis{margin-top:20rpx;}
.box .int{height:90rpx;margin:10rpx 0;padding:0 20rpx;display:flex;line-height:90rpx;}
