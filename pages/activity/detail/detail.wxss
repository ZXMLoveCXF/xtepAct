image{display:block;}
.head-box{margin:30rpx;}
.head-box .act-img-box{position:relative;}
.head-box .act-img-box image{width:690rpx;height:345rpx;border-radius:25rpx 20rpx 20rpx 20rpx;}
.head-box .act-img-box .act-tag{width:100rpx;height:50rpx;line-height:50rpx;position:absolute;background-color:#4db0f4;top:30rpx;right:0;text-align:center;color:#fff;font-size:28rpx;border-radius:100rpx 0 0 100rpx;padding-left:15rpx;}
.head-box .act-img-box .act-tag.on{background-color:#5ce691;}
.head-box .act-time-dis{position:absolute;bottom:0;}
.head-box .act-time-dis .act-text{position:absolute;bottom:0;height:60rpx;width:690rpx;}
.head-box .act-time-dis .act-text text{position:absolute;bottom:0;color:#fff;line-height:60rpx;width:690rpx;text-align:center;}
.head-box .act-time-dis .act-bot{position:relative;bottom:0;height:60rpx;width:690rpx;text-align:center;background-color:#191919;opacity:.5;font-size:28rpx;border-radius:0rpx 0rpx 20rpx 20rpx;}
.head-box .act-content-box{display:flex;font-size:27rpx;margin-top:10rpx;line-height:50rpx;}
.head-box .act-content-box.fir{justify-content:space-between;}
.head-box .act-content-box .on{color:#4db0f4;}
.head-box .act-content-box .usr-data{margin-left:15rpx;display:flex;line-height:60rpx;}
.head-box .usr-data image{width:60rpx;height:60rpx;border-radius:60rpx;border:1rpx solid #e0e0e0;margin-right:15rpx;}
.open-box{line-height:50rpx;display:flex;padding:0 30rpx;font-size:26rpx;color:#353535;font-weight:600}
.open-box .open-img{width:50rpx;height:50rpx;margin-right:20rpx;}
.open-box .open-img image{width:50rpx;height:50rpx;}
.info-box{padding:30rpx 30rpx;font-size:25rpx;color:#4eaff4;background-color:#f3faff}
.dis{height:20rpx;width:100%;background-color:#f1f1f1;}
.task-box{padding:30rpx;}
.task-box .title{color:#353535;text-align:center;font-size:35rpx;display:flex;margin:30rpx auto;margin-top:0;width:230rpx;font-weight:600}
.task-box .title view{background-color:#353535;height:5rpx;width:25rpx;border-radius:8rpx;margin:25rpx 10rpx 0 10rpx;}
.task-box .task-one{border:1px solid #e0e0e0;border-radius:10rpx;width:650rpx;margin:20rpx 0;padding:30rpx 20rpx;display:flex;justify-content:space-between;}
.task-box .task-one .peo-box{margin-right:10rpx;}
.task-box .task-one .peo-box image{width:90rpx;height:90rpx;}
.task-box .task-one .left .pro-box{width:350rpx;display:flex;line-height:15rpx;margin-top:20rpx;margin-right:20rpx;}
.task-box .task-one .left .pro-box .pro{background-color:#f1f1f1;width:350rpx;height:10rpx;border-radius:10rpx;margin-right:10rpx;margin-top:10rpx;}
.task-box .task-one .left .pro-box .pro .on{height:10rpx;border-radius:10rpx;}
.task-box .task-one .left .pro-box .pro .on.gre{background-color:#53d386;}
.task-box .task-one .left .pro-box .pro .on.blu{background-color:#4db0f4;}
.task-box .task-one .left .pro-box .gre{color:#53d386;font-size:25rpx;line-height:25rpx;}
.task-box .task-one .left .pro-box .blu{color:#4db0f4;font-size:25rpx;line-height:25rpx;}
.task-box .task-one .left .pro-box .gre .val{font-size:35rpx;font-weight:600;}
.task-box .task-one .left .pro-box .blu .val{font-size:35rpx;font-weight:600;}
.task-box .task-one .right{text-align:center;background-color:#4db0f4;height:50rpx;min-width:100rpx;line-height:50rpx;padding:5rpx 20rpx;border-radius:50rpx;margin-top:20rpx;}
.task-box .task-one .right.on.gre{background-color:#53d386;}
.task-box .task-one .right.on.blu{background-color:#4db0f4;}
.task-box .task-one .right text{font-size:25rpx;color:#fff;}
.task-box .task-one .right.off{background-color:#e8e8e8;}
.task-box .task-one .right.off text{color:#808080;}
.tip {font-size:28rpx;color:#c1c1c1;line-height:40rpx;padding:20rpx 0rpx 0 0rpx;}
.tran-line{border-top:1px solid #eeeeee;width:100%;margin:20rpx 0;}
.btn-join {border-top:1px solid #eeeeee;padding:0 30rpx;background-color:#fff;width:690rpx;height:150rpx;position:fixed;bottom:0;z-index:999;}
.btn-join .btn{text-align:center;height:100rpx;border-radius:100rpx;margin-top:20rpx;line-height:100rpx;font-size:35rpx;font-weight:600;width:690rpx;}

button{margin:0;padding:0;background-color:#fff;}
/*mask*/  
.drawer_screen{width:100%;height:100%;position:fixed;top:0;left:0;z-index:1000;background:#000;opacity:0.2;overflow:hidden;}  
/*content*/  
.drawer_attr_box{width:100%;overflow:hidden;position:fixed;bottom:0;left:0;z-index:1001;background:#fff;}  
.drawer_content{overflow-y:hidden;}  
.drawer_title{padding:30rpx;font:35rpx "microsoft yahei";text-align:center;}  
.line{border-bottom:5px solid #f8f8f8;}  

.task-box .int-box{display:flex;justify-content:space-around;padding:0 40rpx;margin:0rpx 0 15rpx 0;position:relative;}
.task-box .int-box .line-one .num{display:flex;justify-content:center;position:relative;}
.task-box .int-box .line-one .num text{font-size:60rpx;font-weight:600;}
.task-box .int-box .line-one .num .p-num::after{content:'';background-image:url(http://xtep321go-live.image.alimmdn.com/image/system/users/admin/20180226111836k2ARh2KR.png);width:30rpx;height:30rpx;background-position:center;background-repeat:no-repeat;background-size:30rpx;position:absolute;top:15rpx;}
.task-box .int-box .line-one .num image{width:30rpx;height:30rpx;position:absolute;top:18rpx;right:15rpx;}
.task-box .int-box .line-one .content{margin-top:10rpx;}
.task-box .int-box .line-one .content text{font-size:28rpx;}
.task-box .int-box .ver-line{border-right:1px solid #f1f1f1;height:50rpx;margin-top:20rpx}
.task-box .int-btn{display:flex;justify-content:center;margin-bottom:20rpx;}
.task-box .int-btn .btn{background-color:#4db0f4;border-radius:50rpx;width:450rpx;color:#fff;font-size:35rpx;}
.task-box .int-btn .btn.off{background-color:#e8e8e8;color:#808080;}
.task-box .num-tip-box{font-size:26rpx;color:#828282;text-align:center;margin-bottom:50rpx;}
.task-box .num-tip-box text{color:red;font-weight:600;}
.task-box .int-box .ques-mark{position:absolute;top:-70rpx;left:180rpx;}
.task-box .int-box .ques-mark image{width:420rpx;height:85rpx;}
.task-box .int-box .ques-mark text{position:absolute;top:18rpx;left:35rpx;font:20rpx;color:#4ab1f4;}
